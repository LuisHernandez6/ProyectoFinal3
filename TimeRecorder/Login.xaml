<Window x:Class="MonitorActividad.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitorActividad"
        mc:Ignorable="d"
        Title="Login" Height="309" Width="310">
    <Grid Margin="0,-17,0,0">
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="32,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="229"/>
        <Label x:Name="label" Content="Nombre de Usuario:" HorizontalAlignment="Left" Margin="34,109,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="textBox1" HorizontalAlignment="Left" Margin="32,178,0,0" VerticalAlignment="Top" Width="229"/>
        <Label x:Name="label_Copy" Content="Contraseña:" HorizontalAlignment="Left" Margin="34,152,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonLogin" Content="Iniciar sesion" HorizontalAlignment="Left" Height="19" Margin="32,213,0,0" VerticalAlignment="Top" Width="229" Click="buttonLogin_Click"/>
        <Button x:Name="buttonRegistrar" Content="Registarse" HorizontalAlignment="Left" Height="19" Margin="32,237,0,0" VerticalAlignment="Top" Width="229" Click="buttonRegistrar_Click"/>
        <Image Source="pack://application:,,,/itla.png" Stretch="UniformToFill" Margin="77,18,89,200"/>
    </Grid>
</Window>
